{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "theme": "everforest",
  "model": "openai/gpt-5.3-codex",
  "formatter": {
    "gofumpt": {
      "command": ["[ -x gofumpt ]", "&&", "gofumpt", "-w", "$FILE"],
      "extensions": [".go"]
    },
    "gofmt": {
      "command": ["[ ! -x gofumpt ]", "&&", "gofmt", "-w", "$FILE"],
    }
  },
  "plugin": ["opencode-handoff@0.4.0"],
  "mcp": {
     "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp", "--api-key", "{env:CONTEXT7_API_KEY}"]
    }
  }
}
